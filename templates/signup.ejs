<html>
    <head>
        <title> sign up </title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>
    
    <body>

        <p class="Display-4">Sign up</p>
        <div class="form-control">
        <form id="frm" method="post" action="/user/registered/">
            <label> Username
            <input id="name" type="text" name="username" >
        </label>
            <label> password
            <input id="pwd" name="password" class="form-row">
            </label>
            <label> Email
            <input id="em" name="email" class="form-row">
            </label>

            <script>
                 if (window.history.replaceState){
                    window.history.replaceState(null,null,window.location.href);
  
                    }
                const form = document.getElementById("frm").elements
                function setcookie() {
                    const c ={}
                for (i=0; i<3; i++){

                    c[form[i].name] = form[i].value

                //c.form[i].name = form[i].value
                
                }
                const coo =  `token=${c} ; path = /user/registered`
                document.cookie =  JSON.stringify(coo)
                
                console.log(document.cookie)
            }

            </script>
       
            <button id="sup" class="btn btn-dark" onclick= setcookie() >submit</button>
        </form>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <a href="/" class="btn btn-warning" > Home Page</a>
        <a href="/user/login/" class="btn btn-info" style="background-color: aquamarine;"> Login </a>
    
        
    </body>
